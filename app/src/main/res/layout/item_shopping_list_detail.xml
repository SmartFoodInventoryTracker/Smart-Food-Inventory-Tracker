<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    card_view:cardCornerRadius="16dp"
    android:scaleX="0.95"
    android:scaleY="0.95"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Left Section: Product Details -->

        <!-- Right Section: Quantity and Product Image -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingExtra="4dp"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Product Brand -->
            <TextView
                android:id="@+id/productBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand: No Name"
                android:textColor="#666"
                android:textSize="16sp" />

            <!-- Date Added -->

            <!-- Expiry Badge (optional) -->
            <TextView
                android:id="@+id/expiryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_expiry_badge"
                android:backgroundTint="@android:color/darker_gray"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:text="Expires in 3 days"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Quantity Badge (now visible) -->
            <TextView
                android:id="@+id/quantityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_quantity_badge"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:text="Qty: 1"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <!-- Product Image -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="1dp"
                android:contentDescription="Product image"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/placeholder_image" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
