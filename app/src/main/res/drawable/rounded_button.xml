<?xml version="1.0" encoding="utf-8"?>

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- Rounded corners -->
        <corners android:radius="16dp" />

        <!-- Background color -->
        <solid android:color="#E0E0E0" />

        <!-- Border (optional) -->
        <stroke
            android:width="1dp"
            android:color="#B0B0B0" />

        <!-- Padding (optional) -->
        <padding
            android:left="16dp"
            android:top="16dp"
            android:right="16dp"
            android:bottom="16dp" />
    </shape>
